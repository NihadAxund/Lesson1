

@model WebApplication1.Models.Menus


@{
    Layout = null;
}

<!DOCTYPE html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Menu</title>
</head>
<body>

    <div class="row">
        <div class="col-4">
            <div class="list-group" id="list-tab" role="tablist">
                <a class="list-group-item list-group-item-action active" id="list-home-list" data-bs-toggle="list" href="#list-home" role="tab" aria-controls="list-home">Drinks</a>
                <a class="list-group-item list-group-item-action" id="list-profile-list" data-bs-toggle="list" href="#list-profile" role="tab" aria-controls="list-profile">Fast Food</a>
                <a class="list-group-item list-group-item-action" id="list-messages-list" data-bs-toggle="list" href="#list-messages" role="tab" aria-controls="list-messages">Hot Meals</a>
            </div>
        </div>
        <div class="col-8">
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Drinks[0].Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Drinks[0].Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Drinks[0].Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Drinks[0].Alcohol)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Drinks[0].Fruity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Drinks[0].Fizzy)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Drinks)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Alcohol)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fruity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fizzy)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.FastFoods[0].Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FastFoods[0].Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FastFoods[0].Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FastFoods[0].Vegetarian_Food)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.FastFoods)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Vegetarian_Food)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                </div>
                <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.HotMeals[0].Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HotMeals[0].Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HotMeals[0].Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HotMeals[0].Vegetarian_Food)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.HotMeals)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Vegetarian_Food)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>



